{% extends 'user.base' %}

{% block title %}{{ trans('BlessingSkin\\AuthService::user.authorizations') }}{% endblock %}

{% block content %}
<div class="card">
  <div class="card-header">
    <h3 class="card-title">{{ trans('BlessingSkin\\AuthService::user.authorizations') }}</h3>
  </div>
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>{{ trans('BlessingSkin\\AuthService::user.client-name') }}</th>
          <th>{{ trans('BlessingSkin\\AuthService::user.description') }}</th>
          <th>{{ trans('BlessingSkin\\AuthService::user.authorized-at') }}</th>
          <th>{{ trans('general.operations') }}</th>
        </tr>
      </thead>
      <tbody>
        {% if authorizations|length > 0 %}
          {% for auth in authorizations %}
            <tr>
              <td>{{ auth.client.name }}</td>
              <td>{{ auth.client.description }}</td>
              <td>{{ auth.created_at }}</td>
              <td>
                <button class="btn btn-danger btn-sm revoke-authorization" data-id="{{ auth.id }}">
                  {{ trans('BlessingSkin\\AuthService::user.revoke') }}
                </button>
              </td>
            </tr>
          {% endfor %}
        {% else %}
          <tr>
            <td colspan="4" class="text-center">{{ trans('BlessingSkin\\AuthService::user.no-authorizations') }}</td>
          </tr>
        {% endif %}
      </tbody>
    </table>
  </div>
</div>

<!-- JavaScript文件在bootstrap.php中加载 -->
{% endblock %}
