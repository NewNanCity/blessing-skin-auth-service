{% extends 'user.base' %}

{% block title %}{{ trans('BlessingSkin\\OAuth::user.clients') }}{% endblock %}

{% block content %}
<div class="card">
  <div class="card-header">
    <h3 class="card-title">{{ trans('BlessingSkin\\OAuth::user.clients') }}</h3>
    <div class="card-tools">
      <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#create-client-modal">
        {{ trans('BlessingSkin\\OAuth::user.create-client') }}
      </button>
    </div>
  </div>
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>{{ trans('BlessingSkin\\OAuth::user.client-name') }}</th>
          <th>{{ trans('BlessingSkin\\OAuth::user.client-id') }}</th>
          <th>{{ trans('BlessingSkin\\OAuth::user.client-secret') }}</th>
          <th>{{ trans('BlessingSkin\\OAuth::user.redirect-uri') }}</th>
          <th>{{ trans('BlessingSkin\\OAuth::user.created-at') }}</th>
          <th>{{ trans('general.operations') }}</th>
        </tr>
      </thead>
      <tbody>
        {% if clients|length > 0 %}
          {% for client in clients %}
            <tr>
              <td>{{ client.name }}</td>
              <td>{{ client.client_id }}</td>
              <td>
                <div class="input-group">
                  <input type="password" class="form-control secret-field" value="{{ client.client_secret }}" readonly>
                  <div class="input-group-append">
                    <button class="btn btn-outline-secondary toggle-secret" type="button">
                      <i class="fas fa-eye"></i>
                    </button>
                  </div>
                </div>
              </td>
              <td>{{ client.redirect_uri }}</td>
              <td>{{ client.created_at }}</td>
              <td>
                <button class="btn btn-primary btn-sm edit-client" data-id="{{ client.id }}" data-name="{{ client.name }}" data-redirect="{{ client.redirect_uri }}">
                  {{ trans('general.edit') }}
                </button>
                <button class="btn btn-danger btn-sm delete-client" data-id="{{ client.id }}">
                  {{ trans('general.delete') }}
                </button>
              </td>
            </tr>
          {% endfor %}
        {% else %}
          <tr>
            <td colspan="6" class="text-center">{{ trans('BlessingSkin\\OAuth::user.no-clients') }}</td>
          </tr>
        {% endif %}
      </tbody>
    </table>
  </div>
</div>

<!-- 创建客户端模态框 -->
<div class="modal fade" id="create-client-modal" tabindex="-1" role="dialog" aria-labelledby="create-client-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="create-client-modal-label">{{ trans('BlessingSkin\\OAuth::user.create-client') }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="create-client-form">
          <div class="form-group">
            <label for="client-name">{{ trans('BlessingSkin\\OAuth::user.client-name') }}</label>
            <input type="text" class="form-control" id="client-name" name="name" required>
          </div>
          <div class="form-group">
            <label for="redirect-uri">{{ trans('BlessingSkin\\OAuth::user.redirect-uri') }}</label>
            <input type="url" class="form-control" id="redirect-uri" name="redirect_uri" required>
            <small class="form-text text-muted">{{ trans('BlessingSkin\\OAuth::user.redirect-uri-hint') }}</small>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ trans('general.cancel') }}</button>
        <button type="button" class="btn btn-primary" id="create-client-submit">{{ trans('general.submit') }}</button>
      </div>
    </div>
  </div>
</div>

<!-- 编辑客户端模态框 -->
<div class="modal fade" id="edit-client-modal" tabindex="-1" role="dialog" aria-labelledby="edit-client-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit-client-modal-label">{{ trans('BlessingSkin\\OAuth::user.edit-client') }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="edit-client-form">
          <input type="hidden" id="edit-client-id">
          <div class="form-group">
            <label for="edit-client-name">{{ trans('BlessingSkin\\OAuth::user.client-name') }}</label>
            <input type="text" class="form-control" id="edit-client-name" name="name" required>
          </div>
          <div class="form-group">
            <label for="edit-redirect-uri">{{ trans('BlessingSkin\\OAuth::user.redirect-uri') }}</label>
            <input type="url" class="form-control" id="edit-redirect-uri" name="redirect_uri" required>
            <small class="form-text text-muted">{{ trans('BlessingSkin\\OAuth::user.redirect-uri-hint') }}</small>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ trans('general.cancel') }}</button>
        <button type="button" class="btn btn-primary" id="edit-client-submit">{{ trans('general.submit') }}</button>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    // 切换密钥显示/隐藏
    $('.toggle-secret').click(function () {
      const field = $(this).closest('.input-group').find('.secret-field');
      const icon = $(this).find('i');
      
      if (field.attr('type') === 'password') {
        field.attr('type', 'text');
        icon.removeClass('fa-eye').addClass('fa-eye-slash');
      } else {
        field.attr('type', 'password');
        icon.removeClass('fa-eye-slash').addClass('fa-eye');
      }
    });

    // 创建客户端
    $('#create-client-submit').click(function () {
      const form = $('#create-client-form');
      
      $.ajax({
        url: '{{ url('user/oauth/clients') }}',
        type: 'POST',
        data: form.serialize(),
        dataType: 'json',
        success: function (response) {
          if (response.code === 0) {
            toastr.success(response.message);
            setTimeout(function () {
              window.location.reload();
            }, 1000);
          } else {
            toastr.error(response.message);
          }
        },
        error: function () {
          toastr.error('{{ trans('general.network-error') }}');
        }
      });
    });

    // 打开编辑模态框
    $('.edit-client').click(function () {
      const id = $(this).data('id');
      const name = $(this).data('name');
      const redirect = $(this).data('redirect');
      
      $('#edit-client-id').val(id);
      $('#edit-client-name').val(name);
      $('#edit-redirect-uri').val(redirect);
      
      $('#edit-client-modal').modal('show');
    });

    // 编辑客户端
    $('#edit-client-submit').click(function () {
      const id = $('#edit-client-id').val();
      const form = $('#edit-client-form');
      
      $.ajax({
        url: '{{ url('user/oauth/clients') }}/' + id,
        type: 'PUT',
        data: form.serialize(),
        dataType: 'json',
        success: function (response) {
          if (response.code === 0) {
            toastr.success(response.message);
            setTimeout(function () {
              window.location.reload();
            }, 1000);
          } else {
            toastr.error(response.message);
          }
        },
        error: function () {
          toastr.error('{{ trans('general.network-error') }}');
        }
      });
    });

    // 删除客户端
    $('.delete-client').click(function () {
      const id = $(this).data('id');
      
      if (confirm('{{ trans('BlessingSkin\\OAuth::user.confirm-delete') }}')) {
        $.ajax({
          url: '{{ url('user/oauth/clients') }}/' + id,
          type: 'DELETE',
          dataType: 'json',
          success: function (response) {
            if (response.code === 0) {
              toastr.success(response.message);
              setTimeout(function () {
                window.location.reload();
              }, 1000);
            } else {
              toastr.error(response.message);
            }
          },
          error: function () {
            toastr.error('{{ trans('general.network-error') }}');
          }
        });
      }
    });
  });
</script>
{% endblock %}
